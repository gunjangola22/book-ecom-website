
<% layout("/layouts/boilerplate")%>
<div class="row">
   <div class="col-8 offset-2">
      <br/><br/>
      <body>
         <h3>Create New Form</h3>
         <form method="POST" action="/listings">
            <div class="mb-3">
               <label for="title" class="form-label">Title</label>
         <input  name="listing[title]" placeholder="enter book title" type="text" class="form-control">
            </div>
            
            <div class="mb-3">
               <label for="description" class="form-label">Description</label>
               <textarea name="listing[description]"  class="form-control"></textarea>
            </div>
         
            <div class="mb-3">
               <label for="image" class="form-label">Image Link</label>
               <input name="listing[image]" placeholder="image link/url" type="text" class="form-control">
            </div>
         
            <div class="mb-3">
               <label for="price" class="form-label">Price</label>
               <input name="listing[price]" placeholder="1000" type="number" class="form-control">
            </div>
         
         <button class="btn btn-dark edit-btn">ADD</button>
         <br/><br/>
         </form>
         </body>

   </div>
   

</div>

